<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_border"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"

                    android:padding="2dp"
                    android:layout_gravity="left"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/image" />
                <TextView
                    android:id="@+id/tvNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="minh"
                    android:layout_centerInParent="true"
                    />

                <ImageView
                    android:id="@+id/img_delete_item_list_inventoried"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="3dp"
                    android:src="@android:drawable/ic_notification_clear_all" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txt_List_Loai_SP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="sản phẩm" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginBottom="3dp"
                    android:text="Mã sản phẩm:" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginBottom="3dp"
                    android:text="Serial:" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginBottom="3dp"
                    android:text="Mã kho:" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginBottom="3dp"
                    android:text="SL thực tế:" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginBottom="3dp"
                    android:text="SL hệ thống:" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_list_MaSanPham"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="3dp"
                    android:textSize="14dp"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:text="Mã sản phẩm:" />

                <TextView
                    android:id="@+id/txt_list_Serial"
                    android:textSize="14dp"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_marginBottom="3dp"
                    android:layout_height="wrap_content"
                    android:text="Serial:" />

                <TextView
                    android:id="@+id/txt_list_MaKho"
                    android:gravity="right"
                    android:textSize="14dp"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="3dp"
                    android:layout_height="wrap_content"
                    android:text="Mã kho:" />

                <TextView
                    android:id="@+id/txt_list_SL_ThucTe"
                    android:layout_width="match_parent"
                    android:textSize="14dp"
                    android:gravity="right"
                    android:layout_marginBottom="3dp"
                    android:layout_height="wrap_content"
                    android:text="SL thực tế:" />

                <TextView
                    android:id="@+id/txt_list_SL_HeThong"
                    android:layout_width="match_parent"
                    android:textSize="14dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginBottom="3dp"
                    android:text="SL hệ thống:" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
